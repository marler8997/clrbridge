@notwindows @default wget wget
@notwindows @default unzip unzip
@windows    @default 7z 7z

@set name Mono.Cecil_0.11.1

@rm ../out/${name}
@mkdir ../out

@set url https://www.nuget.org/api/v2/package/Mono.Cecil/0.11.1
@notwindows ${wget} -O ../out/${name}.zip ${url}
@windows    certutil -urlcache -split -f ${url} ../out/${name}.zip

@mkdir ../out/${name}

@notwindows ${unzip} ../out/${name}.zip -d ../out/${name}
@windows    ${7z} x -o../out/${name} ../out/${name}.zip

@rm ../out/${name}.zip
