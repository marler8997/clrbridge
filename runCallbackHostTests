@default dotnetLoader mono

@windows    @set picFlags ""
@notwindows @set picFlags "-fPIC"

@windows    @set libext .lib
@notwindows @set libext .a

@mkdir out/test
dmd -shared ${picFlags} -of=out/test/callbackhostdriver -I=dlang/src_hresult -I=dlang/src_cstring -I=dlang/src_clr -I=dlang/src_clrbridge -I=out/dlibs/src -I=test -I=test/tests -i -i=-mscorlib test/callbackhostdriver.d out/dlibs/mscorlib${libext}
${dotnetLoader} out/ClrCallbackHost.exe out/test/callbackhostdriver
