@default dotnetCompiler csc
@windows    @default dotnetLoader ""
@notwindows @default dotnetLoader "mono"
@default dCompiler dmd

@default unitTests "primitives fields enums classes generics"

@scope @foreach test ${unitTests}
    @rm out/test/unit/${test}
    @mkdir out/test/unit/${test}
@end

@scope @foreach test ${unitTests}
    ${dotnetCompiler} /out:out/test/unit/${test}/${test}.dll /t:library test/unit/${test}/${test}.cs
    # use --shallow so as not to regnerate mscorlib
    ${dotnetLoader} out/ClrBridgeCodegen.exe --shallow file:out/test/unit/${test}/${test}.dll out/test/unit/${test}/src
@end

@scope @foreach test ${unitTests}
    rund --compiler=${dCompiler} -g -debug -i=-mscorlib -I=out/dlibs/src -I=out/test/unit/${test}/src --pass=test/unit/${test}/test.d test/unit/unittestcoreclr.d out/test/unit/${test}/${test}.dll
@end

